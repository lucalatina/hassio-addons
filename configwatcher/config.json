{
    "name": "ConfigWatcher",
    "version": "0.0.2",
    "slug": "configwatcher",
    "description": "Config watchdog which will perform restarts if required",
    "url": "https://github.com/vkorn/hassio-addons/tree/master/configwatcher",
    "image": "vkorn/armhf-configwatcher",
    "startup": "after",
    "boot": "auto",
    "host_network": true,
    "map": ["config:rw"],
    "options": {
        "base_dir": null,
        "check_delay": null,
        "hassio_host": null,
        "hass_host": null,
        "hass_key": "PASSWORD",
        "notify": null, 
        "notify_entity": "my_telegram",
        "hass_watch": ["config"],
        "addons": [
            {
                "name": "AppDaemon",
                "watch": "hadaemon/dashboards"
            }
        ]
    },
    "schema": {
        "base_dir": "str",
        "check_delay": "int",
        "hassio_host": "str",
        "hass_host": "str",
        "hass_key": "str",
        "notify": "bool", 
        "notify_entity": "str",
        "hass_watch": ["str"],
        "addons": [
            {
                "name": "str",
                "watch": "str"
            }
        ]
    }
}
